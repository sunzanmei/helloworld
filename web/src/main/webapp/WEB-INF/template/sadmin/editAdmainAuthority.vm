<!doctype html>
<html>
<head>
<meta charset="utf-8">
<title>Qunar管理员后台</title>
<meta name="keywords" content="Qunar管理员后台">
<meta name="description" content="Qunar管理员后台">
<link rel="stylesheet" type="text/css" href="http://q.qunarzz.com/piao_tts/prd/styles/v2/new@ce09f9018ec5e80445caf67ce0aa2678.css">
</head>
<body>
<form id="form" method="post" action="/sadmin/authority">
<input type="hidden" name="method" id="method" value="addAdmainAuthority" />
<input type="hidden" id="usrId" name="usrId" value="$!{sysUsrInfo.usrId}" />
<div class="caption_new">添加帐号</div>
<div class="content_new">
	<table class="content_table">
		<tbody>
		<tr>
			<th>角色：</th>
			<td>
				<div class="cont_tab_unit">
					<label for="roleId_2"><input type="radio" value="2" name="roleId" class="input_radio" id="roleId_2" #if($!{sysUsrInfo.roleId}==2)checked="checked"#end />供应商管理员</label>
                    <label for="roleId_1"><input type="radio" value="1" name="roleId" class="input_radio" id="roleId_1" #if($!{sysUsrInfo.roleId}==1)checked="checked"#end />Qunar管理员</label>
                    <label for="roleId_100000004"><input type="radio" value="100000004" name="roleId" class="input_radio" id="roleId_100000004" #if($!{sysUsrInfo.roleId}==100000004)checked="checked"#end />审核专员</label>
                    <label for="roleId_10"><input type="radio" value="10" name="roleId" class="input_radio" id="roleId_10" #if($!{sysUsrInfo.roleId}==10)checked="checked"#end />特殊费率管理员</label>
                    <label for="roleId_100000006"><input type="radio" value="100000006" name="roleId" class="input_radio" id="roleId_100000006" #if($!{sysUsrInfo.roleId}==100000006)checked="checked"#end />分销商管理员</label>
                    <label for="roleId_100000007"><input type="radio" value="100000007" name="roleId" class="input_radio" id="roleId_100000007" #if($!{sysUsrInfo.roleId}==100000007)checked="checked"#end />供应商+分销商管理员</label>
				</div>
			</td>
		</tr>
		<tr>
			<th><label for="username"><span class="must_be">*</span>用户名：</label></th>
			<td>
				<div class="cont_tab_unit">
					<input type="text" id="username" name="userName" #if($!{sysUsrInfo.username}) readonly=true #end value="$!{sysUsrInfo.username}" />
				</div>
			</td>
		</tr>
		<tr>
			<th><label for="name"><span class="must_be">*</span>姓名：</label></th>
			<td>
				<div class="cont_tab_unit">
					<input type="text" id="name" name="name" value="$!{sysUsrInfo.name}" />
				</div>
			</td>
		</tr>
        </tbody>


        <tbody id="bindUser_target">
        <tr>
            <th><label for="rtxAccountPms"><span class="must_be">*</span>rtx账号：</label></th>
            <td>
                <div class="cont_tab_unit">
                    <input type="text" id="rtxAccountPms" name="rtxAccountPms" value="$!{sysUsrInfo.rtxAccountPms}" />
                </div>
            </td>
        </tr>
        <tr>
            <th><label for="mobilePms"><span class="must_be">*</span>手机：</label></th>
            <td>
                <div class="cont_tab_unit">
                    <input type="text" id="mobilePms" name="mobilePms" value="$!{sysUsrInfo.mobilePms}" />
                </div>
            </td>
        </tr>
        <tr>
            <th><label for="telephonePms">电话：</label></th>
            <td>
                <div class="cont_tab_unit">
                    <input type="text" id="telephonePms" name="telephonePms" value="$!{sysUsrInfo.telephonePms}" />
                </div>
            </td>
        </tr>
        <tr>
            <th><label for="qqPms"><span class="must_be">*</span>QQ：</label></th>
            <td>
                <div class="cont_tab_unit">
                    <input type="text" id="qqPms" name="qqPms" value="$!{sysUsrInfo.qqPms}" />
                </div>
            </td>
        </tr>
        </tbody>
		<tbody>
		<tr>
            <th><label for="name"><span class="must_be">*</span>状态：</label></th>
			<td>
                <div class="cont_tab_unit">
                    <label for="stop"><input type="radio" value="FORBIDDEN" name="activeStatusPms" class="input_radio" #if(${sysUsrInfo.activeStatusPms} == 'FORBIDDEN')checked="checked"#end id="stop">禁用</label>
                    <label for="start"><input type="radio" value="USING" #if(${sysUsrInfo.activeStatusPms} == 'USING')checked="checked"#end name="activeStatusPms" class="input_radio" id="start">启用</label>
				</div>
			</td>
		</tr>
		</tbody>
		<tbody id="supplier_target" style="display: none;">
		<tr>
			<th><label for="username"><span class="must_be">*</span>添加店铺/分销商：</label></th>
			<td>
				<div class="cont_tab_unit">
					<a href="javascript:;" id="addshopdist">添加</a>
				</div>
			</td>
		</tr>
		<tr>
			<th></th>
			<td>
				<div id="suppliercontainer" class="cont_tab_unit"></div>
			</td>
		</tr>
		</tbody>
	</table>
</div>
<div class="fixed_bar">
	<div class="fixed_bar_inner">
		<input type="button" value="保存" id="savebutton" hidefocus="true" class="btn btn_orange" />
	</div>
</div>
</form>
<script src="http://q.qunarzz.com/jquery/prd/jquery-1.7.2.min.js" type="text/javascript" charset="utf-8"></script>
<script src="http://q.qunarzz.com/piao_tts/prd/scripts/base@ba2d4c123cb3074278981e0c8d9afcba.js" type="text/javascript" charset="utf-8"></script>
<script src="http://q.qunarzz.com/piao_tts/prd/scripts/cpanel/cpanel@b86a814a353d5f1ef0dc2fa2790e3245.js" type="text/javascript" charset="utf-8"></script>
<script src="http://q.qunarzz.com/js/qdatepicker/build/qdatepicker-0.1.min.js" type="text/javascript"></script>
<script src="http://q.qunarzz.com/piao_tts/prd/scripts/cpanel/authorization/adminformpage@45d301ce3ce84dc652968fd1719c7504.js" type="text/javascript" charset="utf-8"></script>
<script type="text/javascript">
	var time_stamp = #include('include/.ver');
	window.context = {
		api: "/sadmin/authority",
		supplierIds: "$!{sysUsrInfo.supplierIds}",
		supplierNames: "$!{sysUsrInfo.supplierNames}",
		distributorIds: "$!{sysUsrInfo.distributorIds}",
		distributorNames: "$!{sysUsrInfo.distributorNames}"
	};
	(new tts.cpanel.authorization.AdminFormPageInit(window.context)).init();
		$!{sysUsrInfo.supplierIds}
</script>
</body>
</html>

