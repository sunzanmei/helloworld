<!doctype html>
<html>
<head>
	<meta charset="utf-8">
	<title>Qunar管理员后台</title>
	<meta name="keywords" content="Qunar管理员后台">
	<meta name="description" content="Qunar管理员后台">
	<link rel="stylesheet" type="text/css" href="http://q.qunarzz.com/piao_tts/prd/styles/v2/new@ce09f9018ec5e80445caf67ce0aa2678.css">
</head>
<body>
<form id="form" method="post" action="/sadmin/authority">
	<input type="hidden" name="method" id="method" value="addSightAuthority" />
	<input type="hidden" id="usrId" name="usrId" value="$!{sysUsrInfo.usrId}" />
	<div class="caption_new">添加帐号</div>
	<div class="content_new">
		<table class="content_table">
			<tr>
				<th>角色：</th>
				<td>
					<div class="cont_tab_unit">
						<label for="roleId_100000000"><input type="radio" value="100000000" name="roleId" class="input_radio" id="roleId_100000000" #if($!{sysUsrInfo.roleId}==100000000)checked="checked"#end />景区管理员(订单管理)</label>
						<label for="roleId_100000005"><input type="radio" value="100000005" name="roleId" class="input_radio" id="roleId_100000005" #if($!{sysUsrInfo.roleId}==100000005)checked="checked"#end />景区数据管理</label>
					</div>
				</td>
			</tr>
			<tr>
				<th><label for="username"><span class="must_be">*</span>用户名：</label></th>
				<td>
					<div class="cont_tab_unit">
						<input type="text" id="username" name="userName" #if($!{sysUsrInfo.username}) readonly=true #end value="$!{sysUsrInfo.username}" />
					</div>
				</td>
			</tr>
			<tr>
				<th><label for="name"><span class="must_be">*</span>姓名：</label></th>
				<td>
					<div class="cont_tab_unit">
						<input type="text" id="name" name="name" value="$!{sysUsrInfo.name}" />
					</div>
				</td>
			</tr>
			<tr>
				<th><label for="username"><span class="must_be">*</span>选择店铺：</label></th>
				<td>
					<div class="cont_tab_unit">
						<input type="text" id="supplierInput" name="supplierInput" value="" />
					</div>
				</td>
			</tr>
			<tr>
				<th></th>
				<td>
					<div id="suppliercontainer" class="cont_tab_unit">
						#set ($size=${sysUsrInfo.supplierNames.size()} - 1)
						#foreach($index in [0..$size])
							<span><a href="javascript:;">${sysUsrInfo.supplierNames[$index]} &times;</a><input type="hidden" name="supplierIds[]" value="${sysUsrInfo.supplierIds[$index]}" /></span>
						#end
					</div>
				</td>
			</tr>
            <tr>
                <th><label for="name"><span class="must_be">*</span>状态：</label></th>
                <td>
                    <div class="cont_tab_unit">
                        <label for="stop"><input type="radio" value="FORBIDDEN" name="activeStatusPms" #if(${sysUsrInfo.activeStatusPms} == 'FORBIDDEN')checked="checked"#end class="input_radio" id="stop">禁用</label>
                        <label for="start"><input type="radio" value="USING" name="activeStatusPms" #if(${sysUsrInfo.activeStatusPms} == 'USING')checked="checked"#end class="input_radio" id="start">启用</label>
                    </div>
                </td>
            </tr>
			<tr>
				<th><span class="must_be">*</span>对应景点：</th>
				<td>
					<div class="cont_tab_unit clrfix">
						<div id="sightcontainer">
							#foreach($sight in $!{sysUsrInfo.sights})
								<input type="hidden" name="sights[]" value="${sight}" />
							#end
						</div>
						<a href="javascript:void(0)" hidefocus="true" id="sightselectbutton" class="sight_add">
							<span>+</span>
							<strong>添加景点</strong>
						</a>
					</div>
				</td>
			</tr>
			<tr>
				<th>POS：</th>
				<td>
					<div class="cont_tab_unit clrfix">
						<div id="poscontainer">
							#foreach($posId in $!{sysUsrInfo.posIds})
								<div><input type="text" name="posIds[]" value="${posId}" /> <a class="deletehook" href="javascript:;">删除</a></div>
							#end
						</div>
						<a href="javascript:;" id="addposbutton" style="padding:5px 3px; line-height: 21px;">添加</a>
					</div>
				</td>
			</tr>
		</table>
	</div>
	<div class="fixed_bar">
		<div class="fixed_bar_inner">
			<input type="button" value="保存" id="savebutton" hidefocus="true" class="btn btn_orange" />
		</div>
	</div>
</form>
<script src="http://q.qunarzz.com/jquery/prd/jquery-1.7.2.min.js" type="text/javascript" charset="utf-8"></script>
<script src="http://q.qunarzz.com/piao_tts/prd/scripts/base@ba2d4c123cb3074278981e0c8d9afcba.js" type="text/javascript" charset="utf-8"></script>
<script src="http://q.qunarzz.com/piao_tts/prd/scripts/cpanel/cpanel@b86a814a353d5f1ef0dc2fa2790e3245.js" type="text/javascript" charset="utf-8"></script>
<script src="http://q.qunarzz.com/js/qdatepicker/build/qdatepicker-0.1.min.js" type="text/javascript"></script>
<script src="http://q.qunarzz.com/piao_tts/prd/scripts/cpanel/authorization/sightformpage@cb6db73394f96b39988cff910502baf0.js" type="text/javascript" charset="utf-8"></script>
<script type="text/javascript">
	var time_stamp = #include('include/.ver');
	window.context = {
		api: "/sadmin/authority"
	};
	(new tts.cpanel.authorization.SightFormPageInit(window.context)).init();
</script>
</body>
</html>

